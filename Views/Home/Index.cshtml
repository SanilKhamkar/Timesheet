@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Employee Registration</h2>
        <p>            
            <p>New Employees can create account here.</p>
        </p>
        <p><a class="btn btn-default" href="@Url.Action("RegistrationPage", "Registration")">Registration &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Employee Login</h2>
        <p>Employees with existing account can login here.</p>
        <p><a class="btn btn-default" href="@Url.Action("LoginPage", "Login")">Login &raquo;</a></p>
    </div>    
</div>